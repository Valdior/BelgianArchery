{% extends 'base.html.twig' %}

{% block title %}Affiliate index{% endblock %}

{% block body %}
    <h1>Affiliate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AffiliateNumber</th>
                <th>AffiliateSince</th>
                <th>AffiliateEnd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for affiliate in affiliates %}
            <tr>
                <td>{{ affiliate.id }}</td>
                <td>{{ affiliate.affiliateNumber }}</td>
                <td>{{ affiliate.affiliateSince ? affiliate.affiliateSince|date('Y-m-d') : '' }}</td>
                <td>{{ affiliate.affiliateEnd ? affiliate.affiliateEnd|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('affiliate_show', {'id': affiliate.id}) }}">show</a>
                    <a href="{{ path('affiliate_edit', {'id': affiliate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
