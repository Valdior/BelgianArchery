{% extends 'layout/layout.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
<div class="row"> 
    
    <section class="col-md-6">
        <h1>Club</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ club.name }}</td>
                </tr>
                <tr>
                    <th>Acronym</th>
                    <td>{{ club.acronym }}</td>
                </tr>
                <tr>
                    <th>Number</th>
                    <td>{{ club.number }}</td>
                </tr>
            </tbody>
        </table>        
    </section>
    <section class="col-md-6">
        <h2>Contact</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Personne de Contact</th>
                    <td>{% if club.owner is not null %}  {{ club.owner.fullname }} {% endif %}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ club.email }}</td>
                </tr>
                <tr>
                    <th>Site web</th>
                    <td><a href="{{ club.website }}">{{ club.website }}</a></td>
                </tr>                
            </tbody>
        </table>        
    </section>
</div>

<div class="row">        
    <section class="col-md-6">
        <h3>Membre Actif</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Archer</th>
                    <th>Numéro d'affiliation</th>
                    <th>Inscrit depuis</th>
                </tr>
            </thead>
            <tbody>
            {% for affiliation in club.membersactif %}
                <tr>
                    <td><a href="{{ path('archer_show', {'id': affiliation.archer.id})}}">{{ affiliation.archer.fullname }}</a></td>
                    <td>{{ affiliation.affiliatenumber }}</td>
                    <td>{{ affiliation.affiliatesince | date("d/m/y") }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
    <section class="col-md-6">
        <h3>Historique des compétitions</h3>        
        <table class="table">
            <thead>
                <tr>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Nbre Participants</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tournament in club.tournaments %}
                <tr>
                    <td>{{ tournament.startdate | date("d/m/y") }}</td>
                    <td>{{ tournament.enddate | date("d/m/y") }}</td>
                    <td>{{ tournament.listparticipants | length }}</td>
                    <td>M'inscrire</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
</div>


{% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-info" href="{{ path('club_edit', {'id': club.id}) }}">edit</a>

    {{ include('club/_delete_form.html.twig') }}
{% endif %}
{% endblock %}
